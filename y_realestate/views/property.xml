<?xml version="1.0" encoding="utf-8"?>
	<odoo>
		<!-- Tree View -->
		<record id="tree_real_estate_root" model="ir.ui.view">
			<field name="name">y.realestate.property.view.tree</field>
			<field name="model">y.realestate.property</field>
			<field name="arch" type="xml">
				<list string="Property" sample="1" decoration-success="state == 'offer_accepted'" decoration-muted="state == 'sold'">
					<field name="name"/>
					<field name="postcode"/>
					<field name="bed_room"/>
					<field name="living_area"/>
					<field name="expected_price"/>
					<field name="selling_price"/>
					<field name="date_availability" optional="hide"/>
					<field name="state" widget="badge" decoration-success="state == 'offer_accepted'" decoration-info="state == 'new'"/>
				</list>
			</field>
		</record>

		<!-- Form View -->
		<record id="form_real_estate_property" model="ir.ui.view">
			<field name="name">y.realestate.property.view.form</field>
			<field name="model">y.realestate.property</field>
			<field name="arch" type="xml">
				<form string="Property">
					<header>
						<field name="state" widget="statusbar" options="{'clickable': '1'}"/>
					</header>
					<sheet>
						<div class="oe_button_box" name="button_box">
							<button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
								<field name="active" widget="boolean_button" options="{'terminology': 'archive'}"/>
							</button>
						</div>
						<div class="oe_title">
							<h1>
								<field name="name" placeholder="Property Name"/>
							</h1>
						</div>
						<group>
							<group string="General Information">
								<field name="property_type_id" string="Property Type" options="{'no_create': False, 'no_open': False}"/>
								<field name="postcode"/>
								<field name="date_availability"/>
								<field name="property_tag_id" widget="many2many_tags" string="Property Tags"/>
							</group>
							<group string="Financial">
								<field name="expected_price"/>
								<field name="selling_price"/>
							</group>
						</group>
						<notebook>
							<page string="Description">
								<group>
									<field name="description" nolabel="1" placeholder="Property description..."/>
								</group>
							</page>
							<page string="Property Details">
								<group>
									<group string="Living Space">
										<field name="bed_room"/>
										<field name="living_area"/>
										<field name="facades"/>
									</group>
									<group string="Outdoor Features">
										<field name="garage"/>
										<field name="garden"/>
										<field name="garden_area" invisible="not garden"/>
										<field name="garden_orientation" invisible="not garden"/>
									</group>
								</group>
							</page>

							<page string="Offers">
							    <field name="offer_ids">
								    <list>
									    <field name="price"/>
										<field name="partner_id"/>
										<field name="status"/>
									</list>
									<form>
									    <group>
										    <field name="price"/>
											<field name="partner_id"/>
											<field name="status"/>
										</group>
									</form>								
								</field>
							</page>
						</notebook>
					</sheet>
				</form>
			</field>
		</record>

		<!-- Search View -->
		<record id="search_real_estate_property" model="ir.ui.view">
			<field name="name">y.realestate.property.view.search</field>
			<field name="model">y.realestate.property</field>
			<field name="arch" type="xml">
				<search>
					<field name="name"/>
					<field name="postcode"/>
					<field name="state"/>
					<filter name="available" string="Available" domain="[('state', '=', 'new')]"/>
					<filter name="archived" string="Archived" domain="[('active', '=', False)]"/>
				</search>
			</field>
		</record>

		<!-- Action -->
		<record id="action_real_estate_root" model="ir.actions.act_window">
			<field name="name">Real Estate</field>
			<field name="res_model">y.realestate.property</field>
			<field name="view_mode">list,form</field>
			<field name="domain">[]</field>
			<field name="context">{'active_test': False}</field>
			<field name="help" type="html">
				<p class="o_view_nocontent_smiling_face">
					Add a new Real Estate Property
				</p>
			</field>
		</record>
	</odoo>